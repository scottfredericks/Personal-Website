<link rel="stylesheet" href="/css/navbar.css" />

<nav class="navbar">
  <div class="nav-content">
    <!-- Brand -->
    <h1 class="nav-brand">
      <a href="/" class="nav-link-item">Scott Fredericks</a>
    </h1>

    <!-- Hamburger Button (Mobile Only) -->
    <button
      class="hamburger"
      aria-expanded="false"
      aria-label="Toggle navigation"
