        <li>
          <!-- Theme Toggle -->
          <button
            type="button"
            id="theme-toggle"
            class="theme-btn"
            aria-label="Toggle Dark Mode"
            title="Toggle Dark Mode"
          >
            <!-- Sun Icon -->
            <svg
              class="icon-sun"
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
